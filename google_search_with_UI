import streamlit as st
import webbrowser
from urllib.parse import quote

# Custom CSS for better styling
st.markdown("""
    <style>
        .stButton>button {
            background-color: #4285F4;
            color: white;
            border: none;
            padding: 10px 24px;
            border-radius: 4px;
            font-size: 16px;
            font-weight: 500;
            transition: all 0.3s;
        }
        .stButton>button:hover {
            background-color: #3367D6;
            transform: scale(1.05);
        }
        .search-box {
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
        .title {
            color: #4285F4;
        }
    </style>
""", unsafe_allow_html=True)

# App layout
st.markdown("<h1 class='title'>üîç Enhanced Google Search</h1>", unsafe_allow_html=True)
st.write("Search the web directly from this app")

# Search box in a styled container
with st.container():
    st.markdown("<div class='search-box'>", unsafe_allow_html=True)
    search_query = st.text_input("Enter your search query:", placeholder="What would you like to search?")
    col1, col2 = st.columns([1, 3])
    with col1:
        if st.button("üîé Search Google"):
            if search_query:
                encoded_query = quote(search_query)
                webbrowser.open_new_tab(f"https://www.google.com/search?q={encoded_query}")
                st.success(f"Searching Google for: {search_query}")
            else:
                st.warning("Please enter a search query first")
    with col2:
        if st.button("üåê Open Google Homepage"):
            webbrowser.open_new_tab("https://www.google.com")
            st.success("Opening Google homepage...")
    st.markdown("</div>", unsafe_allow_html=True)

# Additional features
st.subheader("Quick Search Options")
quick_searches = {
    "News": "https://news.google.com",
    "Maps": "https://maps.google.com",
    "Images": "https://images.google.com",
    "Videos": "https://video.google.com"
}

cols = st.columns(len(quick_searches))
for idx, (name, url) in enumerate(quick_searches.items()):
    with cols[idx]:
        if st.button(name):
            webbrowser.open_new_tab(url)
            st.success(f"Opening Google {name}")

# Footer
st.markdown("---")
st.markdown("""
    <div style="text-align: center; color: #666; font-size: 14px;">
        <p>Made with Streamlit ‚Ä¢ Not affiliated with Google</p>
    </div>
""", unsafe_allow_html=True)
